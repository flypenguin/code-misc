[project]
name = "dagster_dummy"
version = "0.0.1"
requires-python = "==${PYTHON_VERSION}.*"
dependencies = [
    "dagster==${DAGSTER_VERSION}.*",
]

[dependency-groups]
dev = [
    "dagster-webserver",
    "dagster-dg-cli",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.dg]
directory_type = "project"

[tool.dg.project]
root_module = "dagster_dummy"
registry_modules = [
    "dagster_dummy.components.*",
]


